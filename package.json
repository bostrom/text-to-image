{
  "name": "text-to-image",
  "version": "2.4.4",
  "description": "A library for generating an image data URI representing an image containing the text of your choice.",
  "author": "Fredrik Bostr√∂m",
  "homepage": "https://github.com/bostrom/text-to-image#readme",
  "repository": "https://github.com/bostrom/text-to-image",
  "bugs": {
    "url": "https://github.com/bostrom/text-to-image/issues"
  },
  "keywords": [
    "text",
    "image",
    "image generator",
    "text generator",
    "canvas",
    "twitter"
  ],
  "license": "ISC",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "preversion": "npm test",
    "postversion": "git push && git push --tags && npm publish && npm run open-releases",
    "open-releases": "open \"$(node -e 'console.log(`${require(\"./package.json\").repository}/releases`)')\"",
    "test": "jest --coverage"
  },
  "dependencies": {
    "canvas": "^2.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "coveralls": "^3.0.7",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-motley": "^11.1.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "0.0.0",
    "glob": "^7.0.5",
    "husky": "^6.0.0",
    "image-size": "^0.9.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^1.19.1",
    "readimage": "^1.1.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint",
      "prettier --write"
    ],
    "*.{json,graphql,md,css,scss,less}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
