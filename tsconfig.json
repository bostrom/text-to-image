{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    // Emit
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,

    // Type Checking
    "strict": true,
    "noImplicitAny": true,

    // Interop Constraints
    "isolatedModules": true
  },
  "include": ["src/**/*", "types/**/*"]
}
